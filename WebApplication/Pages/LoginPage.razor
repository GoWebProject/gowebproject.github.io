@using Microsoft.AspNetCore.Components
@using Microsoft.AspNetCore.Components.Web;
@page "/LoginPage"
@using Microsoft.JSInterop;
@inject IJSRuntime JsRuntime;
@inherits LoginPageModel

<form>
    <label for="login">Логин/Почта:</label><br>
    <input @bind="_text" type="text" id="login"><br><br>
    <label for="password">Пароль:</label><br>
    <input @bind="_pwd" type="password" id="password"><br><br>
</form>
<button @onclick="OnSubmitButtonClick">Войти</button>

@code{
    private string _text;
    private string _pwd;

    void OnSubmitButtonClick()
    {
        if (OnSubmitListener(_text, _pwd))
        {
            JsRuntime.InvokeVoidAsync("alert", "Неправильный логин или пароль!");
        }
    }

}